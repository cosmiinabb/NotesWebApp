@page
@model NotesWebApp.Pages.Notes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>My Notes</h1>

<p>
    <a asp-page="Create">Create New</a>
    <br/>
    <label>Click on "Details" for a more detailed view of your notes</label>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <label @Html.DisplayNameFor(model => model.Note[0].ShortDescription)>Note Summary</label>
            </th>
        
            <th>
               <label @Html.DisplayNameFor(model => model.Note[0].Date)>Created on</label>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Note) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDescription)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
