@page
@model NotesWebApp.Pages.Notes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Note.ShortDescription" class="control-label">Note Summary</label>
                <input asp-for="Note.ShortDescription" class="form-control" placeholder="MAX 50 char" maxlength="50"/>
                <span asp-validation-for="Note.ShortDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.FullDescription" class="control-label">Note Description</label>
                <input asp-for="Note.FullDescription" class="form-control" />
                <span asp-validation-for="Note.FullDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note.Date" class="control-label">Creation Date</label>
                <input asp-for="Note.Date" class="form-control" />
                <span asp-validation-for="Note.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
